<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relPerfil"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ff00cccc"
        android:id="@+id/toolbarDet"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imgVoltarEditar"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/toolbarDet"
        android:layout_alignParentStart="true"
        android:src="@drawable/backs" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imgpc2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/toolbarDet"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:layout_marginTop="50dp"

        android:baselineAlignBottom="false"
        android:clickable="false"
        android:cropToPadding="false"
        android:src="@drawable/pessoinha" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imageView10"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icouser"
        android:layout_below="@+id/imgpc2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/imageView9"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/imageView10"
        android:layout_alignParentStart="true"
        android:src="@drawable/email" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:textColor="#c0000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/edtNomeEditar"
        android:layout_above="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView10" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:textColor="#c0000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/edtEmailEditar"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_alignStart="@+id/edtNomeEditar"
        android:editable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:id="@+id/imgEditarPerfil"
        android:layout_alignBottom="@+id/toolbarDet"
        android:layout_alignParentEnd="true"
        android:src="@drawable/yes" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/imageView12"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/local"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:textColor="#c0000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="15dp"
        android:id="@+id/edtLocalEditar"
        android:layout_alignBottom="@+id/imageView12"
        android:layout_alignStart="@+id/edtEmailEditar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/imageView13"
        android:layout_marginLeft="24dp"
        android:src="@drawable/gamepad"

        android:layout_below="@+id/imageView12"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_marginRight="15dp"
        android:textColor="#c0000000"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="18dp"
        android:id="@+id/edtJogoEditar"
        android:layout_alignBottom="@+id/imageView13"
        android:layout_alignStart="@+id/edtLocalEditar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFoto"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/camera"
        android:layout_above="@+id/edtNomeEditar"
        android:layout_alignEnd="@+id/imgEditarPerfil" />


</RelativeLayout>