<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relPerfil"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ff00cccc"
        android:id="@+id/toolbarDet"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imgbackListagemUsuario"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/toolbarDet"
        android:layout_alignParentStart="true"
        android:src="@drawable/backs" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstPostUsuario"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbarDet" />

</RelativeLayout>