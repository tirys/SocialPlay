<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/relPerfil"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ff00cccc"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:id="@+id/llAddress"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:paddingRight="1dp"
        android:paddingLeft="2dp"
        android:background="@drawable/retangulo_corners"
        >


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="10dp"
        android:paddingBottom="7dp"
        android:id="@+id/imgNewPost"
        android:src="@drawable/imgnovoo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/txtSelGame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Escolha a plataforma"
        android:layout_margin="20dp"
        android:textColor="#696969"
        android:id="@+id/txtSelGame"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imgpc"
        android:layout_marginLeft="10dp"
        android:background="#ef4747"
        android:padding="30dp"
        android:layout_below="@+id/txtSelGame"
        android:layout_alignParentStart="true"
        android:src="@drawable/tilecomp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/imgcon"
        android:layout_marginTop="20dp"
        android:background="#65a5da"
        android:padding="22dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/tilevideogame"
        android:layout_below="@+id/txtSelGame"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:id="@+id/imgmob"
        android:background="#89c76c"
        android:padding="27dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/imgpc"
        android:layout_alignParentStart="true"
        android:src="@drawable/tilemobile" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/imgport"
        android:layout_marginTop="20dp"
        android:padding="22dp"
        android:background="#a76eae"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/tileportateis"
        android:layout_below="@+id/imgpc"
        android:layout_alignParentEnd="true" />




</RelativeLayout>

