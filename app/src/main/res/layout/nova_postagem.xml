<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Título"
        android:textSize="20sp"
        android:textColor="#3F3E3E"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTituloPost"
        android:layout_margin="14dp"
        android:layout_below="@+id/textView13"
        android:textColor="#9f9797"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jogo"
        android:textSize="20sp"
        android:textColor="#3F3E3E"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:id="@+id/textView14"
        android:layout_below="@+id/edtTituloPost"
        />

    <AutoCompleteTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actvJogoPost"
        android:layout_margin="14dp"
        android:textColor="#9f9797"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/edtTituloPost" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Conteúdo"
        android:textSize="20sp"
        android:textColor="#3F3E3E"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/actvJogoPost"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:id="@+id/edtConteudoPost"
        android:textColor="#9f9797"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/actvJogoPost"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnSalvarPost"
        android:background="#ff00cccc"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/edtConteudoPost"
        android:layout_alignEnd="@+id/edtConteudoPost" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btnCancelarPost"
        android:background="#ffffff"
        android:textColor="#ff00cccc"
        android:textStyle="bold"
        android:layout_below="@+id/edtConteudoPost"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtIdJogo"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignEnd="@+id/textView13"
        android:visibility="invisible" />
</RelativeLayout>