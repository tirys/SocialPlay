<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#ff00cccc"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:id="@+id/llAddress"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:paddingRight="1dp"
        android:paddingLeft="2dp"
        android:background="@drawable/retangulo_corners"
        >

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="10dp"
        android:paddingBottom="7dp"
        android:id="@+id/imgNewPost"
        android:src="@drawable/imgnovo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/imageView8" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/imageView8"
        android:background="#E44748"
        android:padding="10dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The Witcher 3: Wild Hunt"
        android:layout_marginRight="5dp"
        android:textColor="#000000"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PC/PS4/Xbox one"
        android:id="@+id/textView9"
        android:textSize="16dp"
        android:textColor="#8C8788"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Lançamento: 2015"
        android:textSize="18sp"
        android:id="@+id/textView10"
        android:textColor="#847E7F"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produtora: CD Project Red"
        android:textSize="18sp"
        android:id="@+id/textView11"
        android:textColor="#847E7F"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Um texto de apresentação da história do game. Um texto Um texto de apresentação da história do game. Um texto Um texto de apresentação da história do game. Um texto Um texto de apresentação da história do game. Um texto Um texto de apresentação da história do game. "
        android:textColor="#000000"

        android:layout_margin="15dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Criar Post"
        android:id="@+id/button"
        android:background="#51A1A4"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Listar Posts"
        android:id="@+id/button4"
        android:background="#51A1A4"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>