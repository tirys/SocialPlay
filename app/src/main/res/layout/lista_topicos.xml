<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/imgUser"
        android:src="@drawable/user"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:focusable="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="100dp"
        android:text="[Tutorial] Como craftar todos os itens"
        android:textColor="#999999"
        android:textSize="15dp"
        android:id="@+id/txtTituloPost"
        android:layout_alignTop="@+id/imgUser"
        android:focusable="false"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="19dp"
        android:text="Uma descrição rápida e objetiva sobre oque se trata o post. Uma descrição rápida e objetiva sobre oque se trata o post. Uma descrição rápida e objetiva sobre oque se trata  o post."
        android:textSize="12dp"
        android:textColor="#CFCFCF"
        android:id="@+id/txtDescricaoPost"
        android:layout_alignTop="@+id/imgUser"
        android:focusable="false"
        />


</RelativeLayout>